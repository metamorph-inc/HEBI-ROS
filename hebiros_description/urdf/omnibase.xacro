<?xml version="1.0" ?>
<robot name="omnibase" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find hebiros_description)/urdf/x_library.xacro"/>
  <xacro:include filename="$(find hebiros_description)/urdf/x_series_common.xacro"/>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.010" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="-0.1625 0.1775 0" rpy="1.5708 0 0"/>
      <geometry>
        <!--box size="0.50 0.50 0.10"/-->
        <mesh filename="package://hebiros_description/meshes/omnibase_simple.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.50 0.50 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="module1_joint" type="fixed">
    <parent link="base_link"/>
    <child link="module1"/>
    <origin xyz="0.055 0.110 0.030" rpy="0.523599 1.5708 1.5708"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="module2_joint" type="fixed">
    <parent link="base_link"/>
    <child link="module2"/>
    <origin xyz="0.055 -0.110 0.030" rpy="-0.523599 1.5708 -1.5708"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="module3_joint" type="fixed">
    <parent link="base_link"/>
    <child link="module3"/>
    <origin xyz="-0.125 0.0 0.030" rpy="0 1.5708 3.14159"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="module1">
    <visual>
      <origin xyz="0 0 0.030" rpy="0 0 0"/>
      <geometry>
        <!--box size="0.50 0.50 0.10"/-->
        <mesh filename="package://hebiros_description/meshes/x5.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:red_material/>
    </visual>
  </link>

  <link name="module2">
    <visual>
      <origin xyz="0 0 0.030" rpy="0 0 0"/>
      <geometry>
        <!--box size="0.50 0.50 0.10"/-->
        <mesh filename="package://hebiros_description/meshes/x5.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:red_material/>
    </visual>
  </link>  

  <link name="module3">
    <visual>
      <origin xyz="0 0 .030 " rpy="0 0 0"/>
      <geometry>
        <!--box size="0.50 0.50 0.10"/-->
        <mesh filename="package://hebiros_description/meshes/x5.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <xacro:red_material/>
    </visual>
  </link>

  <joint name="omniwheel1_joint" type="fixed">
    <parent link="module1"/>
    <child link="omniwheel1"/>
    <origin xyz="0 0 .060" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="omniwheel2_joint" type="fixed">
    <parent link="module2"/>
    <child link="omniwheel2"/>
    <origin xyz="0 0 0.060" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="omniwheel3_joint" type="fixed">
    <parent link="module3"/>
    <child link="omniwheel3"/>
    <origin xyz="0.0 0.0 0.060" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="omniwheel1">
    <visual>
      <origin xyz="0 0 0.030" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hebiros_description/meshes/omniwheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>
  </link>

  <link name="omniwheel2">
    <visual>
      <origin xyz="0 0 0.030" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hebiros_description/meshes/omniwheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>
  </link>  

  <link name="omniwheel3">
    <visual>
      <origin xyz="0 0 .030 " rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hebiros_description/meshes/omniwheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>
  </link>

  <!-- LIDAR Module Information-->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0 0 0.180" rpy="0 0 1.5708"/>
  </joint>

  <link name="base_scan">  
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hebiros_description/meshes/simple_lidar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
  </link>

  <!-- Color Parameters-->  
  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

</robot>
